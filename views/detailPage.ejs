<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>아이템 제목</title>
		<style>
			* {
				box-sizing: border-box;
				margin: 0;
			}
			.main-wrapper {
				width: 1024px;
				margin: auto;
				z-index: 0;
			}
			.breadcrumb {
				display: flex;
				gap: 4px;
				padding: 12px;
			}
			.div-wrapper {
				display: flex;
				align-items: center;
				gap: 4px;
			}
			.home-icon {
				width: 16px;
				height: 16px;
			}
			.home-text {
				margin: 4px 4px 0 4px;
				color: rgb(90, 90, 90);
			}

			.categoty-text {
				margin: 0px 4px;
				border: 1px solid rgb(200, 200, 200);
				padding: 4px 8px;
				width: 200px;
				/* border-radius: 4px; */
				color: rgb(90, 90, 90);

				display: flex;
				justify-content: space-between;

				position: relative;
			}
			.choose-category {
				height: 16px;
				padding: 1px 0 2px 2px;
			}
			.down-arrow {
				transform: rotate(90deg);
			}

			.hidden-wrapper {
				position: absolute;
				top: 27px;
				left: -1px;

				width: 200px;

				border: 1px solid rgb(200, 200, 200);
				list-style: none;
				padding: 8px;

				background-color: #fff;
				transform: transtion;
				/* transition: 0.2s;
				opacity: 1; */

				/* z-index: 1; */
			}

			.hidden {
				visibility: hidden;
				opacity: 0;
				/* transform: transtion;
				transition: 0.2s; */
			}

			.section-line {
				border-bottom: 1px solid black;
			}
		</style>
	</head>
	<body>
		<header></header>
		<main class="main-wrapper">
			<section class="breadcrumb">
				<div class="div-wrapper">
					<img
						class="home-icon"
						src="data:image/png;base64,"
						alt="홈 아이콘"
					/>
					<div class="home-text">홈</div>
					<img
						class="choose-category"
						src="data:image/png;base64,"
						alt="카테고리 선택 아이콘"
					/>
				</div>
				<div class="div-wrapper">
					<div class="categoty-text one">
						category 1
						<img
							class="choose-category down-arrow"
							src="data:image/png;base64,"
							alt="카테고리 선택 아이콘"
						/>
						<ul class="hidden-wrapper hidden">
							<% for(let i=1; i<4; i++) {%>
							<li><%=i%></li>
							<% } %>
						</ul>
					</div>

					<img
						class="choose-category"
						src="data:image/png;base64,"
						alt="카테고리 선택 아이콘"
					/>
				</div>
				<div class="div-wrapper">
					<div class="categoty-text two">
						category 2
						<img
							class="choose-category down-arrow"
							src="data:image/png;base64,"
							alt="카테고리 선택 아이콘"
						/>
						<ul class="hidden-wrapper two hidden">
							<% for(let i=1; i<4; i++) {%>
							<li><%=i%></li>
							<% } %>
						</ul>
					</div>
					<!-- <img
						class="choose-category"
						src="data:image/png;base64,"
						alt="카테고리 선택 아이콘"
					/> -->
				</div>
			</section>
			<section class="section-line"></section>
		</main>
		<footer></footer>
		<script>
			const categoryOne = document.querySelector(".categoty-text.one");
			const hiddenWrapper = document.querySelector(".hidden-wrapper");
			const categoryTwo = document.querySelector(".categoty-text.two");
			const hiddenWrapperTwo = document.querySelector(".hidden-wrapper.two");
			const HIDDEN_CLASS = "hidden";

			categoryOne.addEventListener("click", () => {
				hiddenWrapper.classList.toggle(HIDDEN_CLASS);
			});
			categoryTwo.addEventListener("click", () => {
				hiddenWrapperTwo.classList.toggle(HIDDEN_CLASS);
			});
		</script>
	</body>
</html>
